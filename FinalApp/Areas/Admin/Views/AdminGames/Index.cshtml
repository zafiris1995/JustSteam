@model IEnumerable<Entities.Game>


@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <h2 style="color: white; align-items: center;">Index</h2>
    @Html.ActionLink("Create New", "Create")
    <table style="color:white; align-items:center;" class="table table-bordered align-content-center">
        <thead>
            <tr>
                <th style="padding-right:30px">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th style="padding-right:30px">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="padding-right:30px">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th style="padding-right:30px">
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th style="padding-right:30px">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
                <th style="padding-right:150px">
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genres)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)€
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @item.ReleaseDate.ToString("dd/MM/yy")
                    </td>
                    @if (item.Company != null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Name)
                        </td>
                    }
                    else
                    {
                        <td>No Company!</td>
                    }
                    <td>
                        @foreach (var genre in item.Genres)
                        {

                            if (genre != null)
                            {
                                @Html.DisplayFor(modelItem => genre.Kind)
                            }
                            else
                            {
                                <p>No Genre!</p>
                            }

                        }
                    </td>
                    <td style="display:inline">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-danger" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
